<div id="<%= dom_id song %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= song.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Image:</strong>
    <%= link_to song.image.filename, song.image, class: "text-gray-700 underline hover:no-underline" if song.image.attached? %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Audio file:</strong>
    <%= link_to song.audio_file.filename, song.audio_file, class: "text-gray-700 underline hover:no-underline" if song.audio_file.attached? %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Artist:</strong>
    <%= song.artist_id %>
  </div>
</div>
